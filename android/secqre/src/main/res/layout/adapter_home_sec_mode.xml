<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.rrioo.smartlife.widget.BaseImageView
        android:id="@+id/id_home_mode_adapter_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/dp12"
        android:src="@drawable/selector_mode_away" />

    <com.rrioo.smartlife.widget.BaseTextView
        android:id="@+id/id_home_mode_adapter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_home_mode_adapter_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp5"
        android:text="@string/mode_away"
        android:textColor="@color/selector_black_gray_txt_color"
        android:textSize="@dimen/text_size_h6" />
</RelativeLayout>