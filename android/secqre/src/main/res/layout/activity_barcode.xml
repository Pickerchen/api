<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <SurfaceView
        android:id="@+id/id_activity_barcode_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.rrioo.smartlife.util.zxing.view.ViewfinderView
        android:id="@+id/id_activity_barcode_finder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.rrioo.smartlife.widget.BaseTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/scan_qr_info_tips"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <include
        android:id="@+id/id_activity_barcode_title"
        layout="@layout/common_title_layout" />
</RelativeLayout>
