<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_img_tv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <com.rrioo.smartlife.widget.BaseImageView
        android:id="@+id/id_home_scene_adapter_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dp5"
        android:src="@drawable/ic_scene_green_default" />

    <View
        android:id="@+id/id_home_scene_adapter_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1_5"
        android:layout_alignLeft="@id/id_home_scene_adapter_iv"
        android:layout_alignRight="@id/id_home_scene_adapter_iv"
        android:layout_below="@id/id_home_scene_adapter_iv"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@color/color_scene_green"
        android:visibility="visible" />

    <com.rrioo.smartlife.widget.BaseTextView
        android:id="@+id/id_home_scene_adapter_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_home_scene_adapter_iv"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="this is a scene"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_h7"
        android:paddingBottom="@dimen/dp5"/>


</RelativeLayout>